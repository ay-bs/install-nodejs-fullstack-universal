# Node.js Fullstack Universal - npm Configuration
# This file contains optimized npm settings for better performance and security

# Performance optimizations
prefer-offline=true
prefer-dedupe=true
save-exact=true
package-lock=true
shrinkwrap=true

# Security settings
audit-level=moderate
fund=false

# Registry settings (use official npm registry)
registry=https://registry.npmjs.org/

# Cache settings
cache-max=86400000
cache-min=3600

# Logging
loglevel=warn

# Install behavior
save=true
save-dev=false
save-optional=false
save-bundle=false

# Progress and timing
progress=true
timing=false

# Node version handling
engine-strict=false

# Workspace settings
workspaces-update=true

# Version handling
git-tag-version=true
sign-git-tag=false
sign-git-commit=false

# Publishing settings
access=public

# Development optimizations
prefer-online=false
offline=false

# Network settings
maxsockets=15
fetch-retries=3
fetch-retry-factor=10
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Optional dependencies
optional=true

# Scripts
ignore-scripts=false

# Global installation prefix (will be set by installer)
# prefix=/usr/local

# Production optimizations for CI/CD
# production=false
# only=prod

# Lock file settings
package-lock-only=false

# Deprecated package handling
# deprecated=true
