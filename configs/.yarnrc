# Node.js Fullstack Universal - Yarn Configuration
# This file contains optimized Yarn settings for better performance

# Registry settings
registry "https://registry.npmjs.org/"

# Cache settings
cache-folder "/tmp/yarn-cache"

# Network settings
network-timeout 300000
network-concurrency 8

# Installation behavior
exact true
ignore-optional false
ignore-engines false
ignore-scripts false

# Progress display
progress-bar true
emoji true

# Workspace settings
workspaces-experimental true

# Security settings
ignore-platform false
ignore-engines false

# Development settings
prefer-offline true
silent false
no-progress false

# Version handling
version-tag-prefix "v"
version-git-tag true
version-commit-hooks true
version-git-sign false

# Production builds
production false

# Peer dependencies
ignore-peer-deps false

# Flat installation
flat false

# Strict SSL
strict-ssl true

# Child concurrency
child-concurrency 8

# Save prefix
save-prefix "^"

# Install frozen lockfile
frozen-lockfile false

# Check files
check-files true

# No bin links
no-bin-links false

# No lockfile
no-lockfile false

# Pure lockfile
pure-lockfile false

# Update checksums
update-checksums false
